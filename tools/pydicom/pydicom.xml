    <macros>
        <token name="@TOOL_VERSION@">3.0.1</token>
        <token name="@VERSION_SUFFIX@">0</token>
    </macros>
    <edam_operations>
        <edam_operation>operation_3443</edam_operation>
    </edam_operations>
    <requirements>
        <requirement type="package" version="@TOOL_VERSION@">pydicom</requirement>
        <requirement type="package" version="0.4.1">giatools</requirement>
    </requirements>
    <command><![CDATA[

    python '$__tool_directory__/pydicom.py'
    '$input'
